<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Background shape-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
        </shape>
    </item>

    <!--Outline-->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="8dp"
                android:color="@android:color/black" />
        </shape>
    </item>

    <!--Vertical Clip-->
    <item
        android:bottom="24dp"
        android:top="24dp">
        <shape android:shape="rectangle">
            <solid
                android:width="5dp"
                android:color="@android:color/white" />
        </shape>
    </item>

    <!--Horizontal Clip-->
    <item
        android:left="24dp"
        android:right="24dp">
        <shape android:shape="rectangle">
            <solid
                android:width="5dp"
                android:color="@android:color/white" />
        </shape>
    </item>
</layer-list>